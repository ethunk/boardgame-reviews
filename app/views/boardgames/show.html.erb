<div class="row">
  <div class="container clearfix text-center">
    <div id="back-to-list">
      <%= button_to "Back to All Boardgames", boardgames_path, class: 'button', method: :get %>
    </div>

    <h1>
      <%= @boardgame.name %>
    </h1>

    <p>
      <%= @boardgame.description %>, <%= @boardgame.publisher %> <%= @boardgame.avg_rating %>
    </p>

    <table align="center">
      <tr>
        <th>Rating</th>
        <th>Description</th>
      </tr>
      <tr>
        <td><%= @boardgame.avg_rating %></td>
        <td><%= @boardgame.description %></td>
      </tr>
    </table>

    <% if @boardgame.user == current_user %>
        <ul class="button-group text-center">
          <li><%= button_to "Delete this Boardgame", boardgame_path(@boardgame), method: :delete, class: 'button' %></li>
          <li><%= button_to "Edit this Boardgame", edit_boardgame_path(@boardgame), class: 'button', method: :get %></li>
        </ul>
    <% end %>
        <h2>Reviews</h2>
  </div>
</div>
<div class="row">
  <div class="enter-review">
    <div class="container">
    <%= form_for [@boardgame, @review] do |f| %>

      <%= f.label :body %>
      <%= f.text_field :body %>

      <%= f.label :rating, "Rating (scale of 1 - 5)" %>
      <%= f.text_field :rating %>

      <%= f.submit "Submit" %>
    <% end %>
    </div>
  </div>

    <% @reviews.each do |review| %>
    <div class="container-total-review">
      <div id="vote-div">
        <%= link_to image_tag("Upvote_Edited_Final.png"), upvote_review_votes_path(review), class: 'upvote' %>
          <div class= 'vote-total'>
            <%= @vote_total[review.id] %>
          </div>
        <%= link_to image_tag("Downvote_Edited_Final.png"), downvote_review_votes_path(review), class: 'downvote' %>
      </div>
      <div class="review-container">
        <p><strong>Review:</strong> <%= review.body %></p>
        <p><strong>Boardgame Rating:</strong> <%= review.rating %></p>
        <p><strong>Time of Review:</strong> <%= review.created_at %></p>
        <% if review.user == current_user %>
          <%= button_to "Delete this Review", boardgame_review_path(@boardgame, review.id), method: :delete, class: "button" %>
        <% end %>
      </div>
  </div>
  <% end %>

  <%= paginate @reviews %>
</div>
