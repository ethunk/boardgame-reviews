<div class="row">
  <div class="small-6 small-offset-3 columns">
    <h1 class="header">Create a Boardgame</h1>
    <%= form_for @boardgame do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :publisher %>
      <%= f.text_field :publisher %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "Submit New Boardgame" %>

    <% end %>
  </div>
</div>
