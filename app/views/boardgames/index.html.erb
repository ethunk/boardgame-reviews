

  <h1 class="title small-4 small-offset-4">
    List of Boardgames
  </h1>

  <%- if current_user -%>
    <div class="small-4 small-offset-4">
      <h5 class='button'><%= link_to "Submit New Boardgame", new_boardgame_path, :id => 'submit_link' %></h5>
    </div>
  <% end %>

<div class='container clearfix text-center'>
  <% @boardgames.each do |boardgame| %>
    <table class="boardgame-list small-4 small-offset-4">
      <tr>
        <th colspan=4><%= link_to("#{boardgame.name}", boardgame_path(boardgame), :id => "boardgame_title") %></th>
      </tr>
      <tr>
        <th>Rating</th>
        <th>Publisher</th>
        <th>Description</th>
        <th>Category</th>
      </tr>
      <tr>
        <td><%= boardgame.avg_rating %></td>
        <td><%= link_to boardgame.publisher, boardgame_path(boardgame) %></td>
        <td><%= boardgame.description %></td>
        <td>
        <% if boardgame.categories %>
          <% boardgame.categories.each do |category| %>
            <div><%= category.name %></div>
            <%end%>
          </td>
          <% else %>
          <td> N/A </td>
        <%end%>
      </tr>
    </table>
  <%end%>
  </div>

  <%= paginate @boardgames %>
