
    <%= form_for @boardgame do |f| %>

      <%= f.label :name, "Name" %>
      <%= f.text_field :name %>

      <%= f.label :publisher, "Publisher" %>
      <%= f.text_field :publisher %>

      <%= f.label :description, "Description" %>
      <%= f.text_field :description %>

      <%= f.submit "Submit" %>

    <% end %>
