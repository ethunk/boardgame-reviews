<%= form_for [@boardgame, @review] do |f| %>
  <!-- <table> -->
    <th>
      <%= f.label :body %>
      <%= f.text_area :body %>
    </th>
    <th>
      <%= f.label :rating, "Rating (scale of 1 - 5)" %>
      <% if @review.rating.nil? %>
        <%= f.select(:rating, options_for_select(@rating)) %>
      <% else %>
      <%= f.select(:rating, options_for_select(@rating, selected: @rating[@review.rating])) %>
      <% end %>
    </th>
  <%= f.submit "Submit" %>
<!-- </table> -->
<% end %>
